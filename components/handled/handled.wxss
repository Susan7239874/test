/* components/handled/handled.wxss */
.modwrap{
  width: 700rpx;
height:267rpx;
background: #FFFFFF;
border: 1rpx solid #E9E9E9;
box-shadow: 0px 4rpx 8rpx rgba(0, 0, 0, 0.08);
opacity: 1;
border-radius: 12rpx;
margin:auto;
padding-left:26rpx;
padding-right:26rpx;
box-sizing: border-box;
margin-bottom:23rpx;
position: relative;
z-index: 1;
}
.modwrap .title{
  width: 100%;
  margin:20rpx 0 24rpx 0;
font-size: 30rpx;
font-weight: 400;
color: #000000;
}

.modwrap .mark{
  height:50rpx;
  display: flex;
  align-items: center;
}
.mark1{
  height:30rpx!important;
}
.modwrap .mark .label{
  font-size: 24rpx;
  font-weight: 400;
  line-height:24rpx;
  color: #A4A4A4;
  display:inline-block;
  width: 117rpx;
}
.modwrap .mark .content{
display:inline-block;
font-size: 26rpx;
font-weight: 400;
line-height:26rpx;
color: #000000;
}
.statuswrap{
position: absolute;
z-index: 2;
width: 155rpx;
height: 168rpx;
right:31rpx;
top:26rpx;
}
.statuswrap .passicon{
  display: block;
  width: 155rpx;
  height: 168rpx;
}
.statuswrap .dec{
font-size: 19rpx;
font-weight: 400;
line-height:19rpx;
color: #08B42A;
position: absolute;
z-index: 3;
top:78rpx;
width: 100%;
text-align: center;
}
.redcolor{
  color:#FD0707!important;
}