/* components/line-field/line-field.wxss */

.inputwrap{
  width:730rpx;
  margin-left:20rpx;
  border-bottom: 1rpx solid #E5E5E5;
  height: 88rpx;
  display: flex;
  align-items: center;
}
.inputwrap .label .red{
  font-size: 28rpx;
  color:#EC1515;
  margin-right:10rpx;
  margin-left:20rpx;
}
.inputwrap .label .tex{
font-size: 28rpx;
font-weight: 400;
line-height:28rpx;
color: #000000;
}
.inputwrap input{
  flex:1;
  height: 88rpx;
  text-align: right;
  padding-left:24rpx;
  padding-right:30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
font-weight: 400;
line-height:88rpx;
color: #000000;
}
.inputwrap .placeholderclass{
font-size: 28rpx;
font-weight: 400;
line-height:28rpx;
color: #B3B3B3;
}