/* -s*/
.switchwrap{
  height: 120rpx;
}
.switch {
  width:430rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #E2E2E2;
  opacity: 1;
  border-radius: 60rpx;
  margin: auto;
  position: relative;
  z-index: 1;
}
.switch .on,.switch .off{
font-size: 30rpx;
font-weight: 400;
line-height:30rpx;
color: #000000;
position: absolute;
}
.switch .on{
  display: inline-block;
  width: 227rpx;
height: 70rpx;
line-height: 70rpx;
background: #F5D242;
opacity: 1;
border-radius: 60rpx;
text-align: center;
z-index: 3;
left:0;
}
.switch .off{
  display: inline-block;
  width: 227rpx;
height: 70rpx;
line-height: 70rpx;
background: transparent;
opacity: 1;
border-radius: 60rpx;
text-align: center;
z-index: 2;
left:0;
}

.switch .right{
  transform: translateX(203rpx);
}
.switch .right2{
  transform: translateX(200rpx);
}
